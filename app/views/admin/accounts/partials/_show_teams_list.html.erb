<div class="row mt-3">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h6>Teams</h6>
          </div>

          <div class="col text-end">
            <%= link_to 'Create',
                        new_admin_account_team_path(account_id: @account.id),
                        class: 'btn bg-gradient-info',
                        data: { controller: 'shared--turbo-request' } %>
          </div>
        </div>
      </div>

      <hr class="horizontal dark p-0 m-0">

      <%= render Shared::Table::IndexComponent.new(
        data: @account.account_teams.order(name: :asc),
        rows_partial: 'admin/teams/partials/table_content',
        headers: AccountTeamDecorator.index_table_headers
      ) %>
    </div>
  </div>
</div>