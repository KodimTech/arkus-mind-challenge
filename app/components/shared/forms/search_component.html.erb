<%= search_form_for query, url: url, method: :get do |form| %>
  <div class="row mb-2 mt-2">
    <div class="col">
      <label>User</label>
      <%= form.select :user_id_eq,
                      User.where(role: Users::Role::REGULAR).map { |user| ["#{user.first_name} #{user.last_name}", user.id] }.sort,
                      { prompt: 'Pick an user' }, { class: 'form-select' } %>
    </div>

    <div class="col">
      <label>Start Date</label>
      <%= form.date_field :start_date_gteq, class: 'form-control' %>
    </div>

    <div class="col">
      <label>End Date</label>
      <%= form.date_field :end_date_lteq, class: 'form-control' %>
    </div>

    <div class="col">
      <label>Created Date</label>
      <%= form.date_field :created_at_gteq, class: 'form-control' %>
    </div>

    <div class="col">
      <label>Status</label>
      <%= form.select :status_eq, AccountTeamUsers::Status.list.map { |status| [status.humanize, status] }.sort,
                      { prompt: 'Pick a status' }, { class: 'form-select' } %>
    </div>

    <div class="col mt-4 pt-2">
      <%= link_to 'Reset', request.path, class: 'btn bg-gradient-warning me-2' %>
      <%= form.submit 'Search', class: 'btn bg-gradient-info' %>
    </div>
  </div>
<% end %>